{
  "id": "dev.pelican.panel",
  "title": "Pelican Panel",
  "version": "1.0.0-beta22",
  "description": "Open-source game server management panel",
  "tagline": "Manage your game servers with Pelican",
  "website": "https://pelican.dev",
  "icon": "logo.png",
  "healthCheckPath": "/",
  "httpPort": 80,
  "manifestVersion": 2,
  "dockerImage": "ghcr.io/orcvole/panel:latest",
  "addons": {
    "localstorage": {},
    "mysql": {},
    "sendmail": {}
  },
  "environment": [
    {
      "key": "APP_URL",
      "description": "The URL of your Pelican installation",
      "default": "https://${DOMAIN}"
    },
    {
      "key": "APP_ENV",
      "description": "Application environment",
      "default": "production"
    },
    {
      "key": "APP_DEBUG",
      "description": "Debug mode setting",
      "default": "false"
    },
    {
      "key": "APP_LOCALE",
      "description": "Default locale",
      "default": "en"
    },
    {
      "key": "DB_HOST",
      "description": "Database host (provided by Cloudron)",
      "default": "${MYSQL_HOST}"
    },
    {
      "key": "DB_PORT",
      "default": "${MYSQL_PORT}"
    },
    {
      "key": "DB_DATABASE",
      "default": "${MYSQL_DATABASE}"
    },
    {
      "key": "DB_USERNAME",
      "default": "${MYSQL_USERNAME}"
    },
    {
      "key": "DB_PASSWORD",
      "default": "${MYSQL_PASSWORD}"
    },
    {
      "key": "MAIL_DRIVER",
      "description": "Mail driver for Laravel",
      "default": "smtp"
    },
    {
      "key": "MAIL_HOST",
      "description": "SMTP server from Cloudron",
      "default": "${CLOUDRON_MAIL_SMTP_SERVER}"
    },
    {
      "key": "MAIL_PORT",
      "description": "SMTP port from Cloudron",
      "default": "${CLOUDRON_MAIL_SMTP_PORT}"
    },
    {
      "key": "MAIL_USERNAME",
      "description": "SMTP username from Cloudron",
      "default": "${CLOUDRON_MAIL_SMTP_USERNAME}"
    },
    {
      "key": "MAIL_PASSWORD",
      "description": "SMTP password from Cloudron",
      "default": "${CLOUDRON_MAIL_SMTP_PASSWORD}"
    },
    {
      "key": "MAIL_FROM_ADDRESS",
      "description": "Default 'From' email address",
      "default": "${CLOUDRON_MAIL_FROM}"
    },
    {
      "key": "MAIL_FROM_NAME",
      "description": "Default 'From' name for emails",
      "default": "Pelican Panel"
    }
  ],
  "postInstallMessage": "After installation, please visit https://${DOMAIN}/installer to complete the setup."
}
